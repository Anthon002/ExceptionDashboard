<div class="login-page d-flex align-items-center bg-gray-100">
    <div class="container mb-3">
        <div class="row">
                <div class="card">
                    <div class="card-body p-5">
                        <header class="text-center mb-5">
                            <h1 class="text-xxl text-gray-400 text-uppercase">Exception<strong class="text-primary">Dashboard</strong></h1>
                        </header>
                        <form asp-action="ConfirmEmail" asp-controller="ApplicationUser" class="register-form" method="post">
                            <div class="row">
                                <div class="col-lg-8 mx-auto">
                                    <div class="input-material-group mb-3">
                                        <input class="input-material" type="text" name="confirmationOtp" required data-validate-field="registerUsername">
                                        <label class="label-material" for="confirmationOtp"> Confirmation Key</label>
                                    </div>
                                <div class="col-12 text-center">
                                    <button class="btn btn-primary mb-3" id="login" type="submit">Confirm</button>
                                    <br />
                                    <a id="login" class="btn btn-secondary mb-3 customlogin" asp-action="SendEmail" asp-controller="ApplicationUser" asp-route-Id="@ViewData["UserId"]"> Resend Code </a>
                                </div>
                                <div class="col-12 text-center">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

<script>
    var btn = document.querySelector(".customlogin");
    var allowsend = true;
    btn.addEventListener("click",function(event){
        btn.style.display = "hidden"

    });
</script>