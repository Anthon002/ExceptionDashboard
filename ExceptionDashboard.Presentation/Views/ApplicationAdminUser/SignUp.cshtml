      href="https://cdn.jsdelivr.net/npm/ag-grid-community/styles/ag-theme-alpine.css" />

<div class="login-page d-flex align-items-center bg-gray-100">
    <div class="container mb-3">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="card">
                    <div class="card-body p-5">
                        <header class="text-center mb-5">
                            <h1 class="text-xxl text-gray-400 text-uppercase">Exception<strong class="text-primary">Dashboard</strong></h1>
                            <h7 class="text-xxl text-gray-400 text-dark">Admin Registration </h7>

                        </header>
                        <form asp-action="SignUp" asp-controller="ApplicationAdminUser" class="register-form" method="post">
                            <div class="row">
                                <div class="col-lg-8 mx-auto">
                                    <div class="input-material-group mb-3">
                                        <input class="input-material" asp-for="FirstName" type="text" name="firstname" required data-validate-field="registerUsername">
                                        <label class="label-material" for="firstname">First Name                </label>
                                    </div>
                                    <div class="input-material-group mb-3">
                                        <input class="input-material" asp-for="LastName" type="text" name="lastname" required data-validate-field="registerUsername">
                                        <label class="label-material" for="lastname">Last Name                </label>
                                    </div>
                                    <div class="input-material-group mb-3">
                                        <input class="input-material" asp-for="Email" type="email" name="email" required data-validate-field="registerEmail">
                                        <label class="label-material" for="email">Email Address</label>
                                    </div>
                                </div>
                                <div class="col-12 text-center">
                                    <button class="btn btn-primary mb-3 " id="login" type="submit">Register</button><br><span class="text-xs text-gray-500">Already have an account?  </span><a class="text-xs text-paleBlue ms-1" asp-action="Login" asp-controller="ApplicationUser">Login</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

